---
layout: default
stylesheets:
  - /css/index.css
---

<main>
  <c-layout>
    <c-layout-item type="full" class="page-heading">
      <c-layout>
        <c-layout-item type="full" class="about-container">
          <div class="about">
            <c-layout>
              <div class="about-content">
                <h1 class="name">Willson</h1>
                <p class="fed">Front-end developer</p>
                <p class="dt">Design Technologist
                  <a class="sh-link" href="https://shopify.ca">@Shopify</a>
                </p>
                {{ content }}
              </div>
            </c-layout>
          </div>
        </c-layout-item>
        <c-layout-item type="full">
          <film-strip style="transform: translateZ(0);" color="var(--theme-color-black)"></film-strip>
        </c-layout-item>
        <c-layout-item type="full" class="highlight">
          <c-layout>
            <div class="movies-title">
              <h2>What I'm watching</h2>
            </div>
          </c-layout>
          <c-poster-list class="poster-carousel">
            {% for poster in letterboxd.recentlyWatched %}
              <c-poster src="{{poster.src}}" alt="{{poster.alt}}" url="{{poster.url}}" sources='{{ poster.sources | JSONStringify }}'></c-poster>
            {% endfor %}
          </c-poster-list>
        </c-layout-item>
      </c-layout>
    </c-layout-item>
    <c-layout-item type="full">
      <film-strip color="var(--theme-color-black)"></film-strip>
    </c-layout-item>
    <c-layout-item type="full" class="page-content highlight">
      <c-layout>
        <h2>What I'm working on</h2>
        <p>Turn this into swipe panels using component from other project</p>
        <c-layout-item type="full">
          <div class="project-container">
            {%- for project in collections.project -%}
              <div class="project">
                <div class="project-hero">
                  {% heroImage project.data.hero, "project preview", "(min-width: 30rem) 10vw, 30vw, 50vw" %}
                </div>
                <div class="project-description">
                  <h3>{{ project.data.title }}
                  </h3>
                  <p>{{ project.data.description }}
                  </p>
                  <a href="{{ project.data.projectUrl }}">View website</a>
                </div>
              </div>
            {%- endfor -%}
          </div>
          <div class="project-container">
            {%- for project in collections.project -%}
              <div class="project">
                <div class="project-hero">
                  {% heroImage project.data.hero, "project preview", "(min-width: 30rem) 10vw, 30vw, 50vw" %}
                </div>
                <div class="project-description">
                  <h3>{{ project.data.title }}
                  </h3>
                  <p>{{ project.data.description }}
                  </p>
                  <a href="{{ project.data.projectUrl }}">View website</a>
                </div>
              </div>
            {%- endfor -%}
          </div>
          <div class="project-container">
            {%- for project in collections.project -%}
              <div class="project">
                <div class="project-hero">
                  {% heroImage project.data.hero, "project preview", "(min-width: 30rem) 10vw, 30vw, 50vw" %}
                </div>
                <div class="project-description">
                  <h3>{{ project.data.title }}
                  </h3>
                  <p>{{ project.data.description }}
                  </p>
                  <a href="{{ project.data.projectUrl }}">View website</a>
                </div>
              </div>
            {%- endfor -%}
          </div>
        </c-layout-item>
      </c-layout>
    </c-layout-item>

    <c-layout-item type="full">
      <film-strip color="var(--theme-color-black)"></film-strip>
    </c-layout-item>
  </c-layout>
</main>