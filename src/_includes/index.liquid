---
layout: default
stylesheets:
  - /css/index.css
---

<main>
  <c-layout>
    {{ content }}
    <c-layout-item type="full">
      <h2>What I'm watching</h2>
      <c-poster-list>
        {% for poster in letterboxd.recentlyWatched %}
          <c-poster src="{{ poster.src }}" alt="{{ poster.alt }}" url="{{ poster.url }}"></c-poster>
        {% endfor %}
      </c-poster-list>
    </c-layout-item>
  </c-layout>
</main>
