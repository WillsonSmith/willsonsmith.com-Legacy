---
layout: default
stylesheets:
  - /css/index.css
---

<main>
  <c-layout>

    <c-layout-item type="full" class="about-container">
      <div class="about">
      <c-layout>
        <div class="about-content">
          {{ content }}
        </div>
      </c-layout>
      </div>
    </c-layout-item>

    <c-layout-item type="full" class="poster-carousel-wrap">
    <div class="movies-title">
      <h2>What I'm watching</h2>
    </div>
      <c-poster-list class="poster-carousel">
        {% for poster in letterboxd.recentlyWatched %}
          <c-poster
            src="{{ poster.src }}"
            alt="{{ poster.alt }}"
            url="{{ poster.url }}">
            {% for source in poster.sources %}
              <source srcset="{{ source.srcset }}" type="{{ source.type }}">
            {% endfor %}
          </c-poster>
        {% endfor %}
      </c-poster-list>
    </c-layout-item>
  </c-layout>
</main>
