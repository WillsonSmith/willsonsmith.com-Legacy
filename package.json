{
  "name": "@willson/pyre-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "wireit",
    "dev": "wireit",
    "clean": "wireit",
    "watch": "pyre watch",
    "components:watch": "wireit",
    "copy-shoelace-assets": "wireit"
  },
  "wireit": {
    "build": {
      "command": "pyre build && npm run copy-shoelace-assets && vite build",
      "dependencies": [
        "clean",
        "./components:build",
        "./functions:build"
      ]
    },
    "dev": {
      "command": "concurrently \"npm run watch -w functions\" \"npm run components:watch\" \" wds \" \"pyre watch\""
    },
    "components:watch": {
      "dependencies": [
        "./components:watch"
      ]
    },
    "clean": {
      "command": "rimraf ./pyre"
    },
    "copy-shoelace-assets": {
      "command": "mkdir ./pyre/public && mkdir ./pyre/public/assets && cp -r ./node_modules/@shoelace-style/shoelace/dist/assets ./pyre/public/assets"
    }
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@lit-labs/ssr-client": "^1.1.1",
    "@shoelace-style/shoelace": "^2.3.0",
    "@webcomponents/template-shadowroot": "^0.2.1",
    "lit": "^2.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "@web/dev-server": "^0.1.38",
    "@willson/pyre": "^0.0.2",
    "concurrently": "^8.0.1",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-import": "^2.27.5",
    "glob": "^10.0.0",
    "rimraf": "^4.4.1",
    "rollup-plugin-minify-html-literals": "^1.2.6",
    "typescript": "^5.0.4",
    "vite": "^4.2.1",
    "vite-plugin-top-level-await": "^1.3.0",
    "wireit": "^0.9.5"
  },
  "workspaces": [
    "components",
    "functions"
  ],
  "engines": {
    "node": ">=16.13.0"
  }
}
